<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>Gestion des Utilisateurs - Port de Russell</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 1.5rem 0;
            background: white;
        }

        th,
        td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            text-align: left;
            font-size: 0.9rem;
        }

        th {
            background-color: #f8f9fa;
            color: #0056b3;
        }

        .btn-delete {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-delete:hover {
            background-color: #c0392b;
        }

        h1,
        h2 {
            color: #0056b3;
            margin-bottom: 1rem;
        }

        .nav-link {
            display: inline-block;
            margin-bottom: 1rem;
            text-decoration: none;
            color: #666;
            font-size: 0.8rem;
        }
    </style>
</head>

<body>
    <div class="login-container" style="max-width: 800px;">
        <header>
            <a href="/dashboard" class="nav-link">← Retour au Tableau de Bord</a>
            <h1>Liste des Utilisateurs</h1>
        </header>

        <main>
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user=> { %>
                        <tr>
                            <td>
                                <%= user.username %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <form action="/users/<%= user.email %>?_method=DELETE" method="POST"
                                    style="display:inline;">
                                    <button type="submit" class="btn-delete"
                                        onclick="return confirm('Supprimer cet utilisateur ?')">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>

            <hr style="margin: 2rem 0; border: 0; border-top: 1px solid #eee;">

            <section>
                <h2>Ajouter un utilisateur</h2>
                <form action="/users" method="POST">
                    <div class="field">
                        <label>Nom d'utilisateur</label>
                        <input type="text" name="username" placeholder="Nom" required>
                    </div>

                    <div class="field">
                        <label>Email</label>
                        <input type="email" name="email" placeholder="Email" required>
                    </div>

                    <div class="field">
                        <label>Mot de passe</label>
                        <input type="password" name="password" placeholder="Mot de passe" required>
                    </div>

                    <button type="submit">Créer l'utilisateur</button>
                </form>
            </section>
        </main>
    </div>
</body>

</html>